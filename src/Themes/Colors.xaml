<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Global Colors -->
    <Color x:Key="AppBackgroundColor">#1E1E1E</Color>
    <Color x:Key="SidebarColor">#FF666666</Color>
    <Color x:Key="TabColor">#FF666666</Color>
    <Color x:Key="TextColor">White</Color>
    <Color x:Key="AccentColor">#66BB66</Color>

    <!-- Global Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
    <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}" />
    <SolidColorBrush x:Key="TabHeaderBrush" Color="{StaticResource TabColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />

    <!-- Tab Backgrounds -->
    <SolidColorBrush x:Key="TabBackground" Color="{StaticResource SidebarColor}" />
    <SolidColorBrush x:Key="TabForeground" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="TabSelectedBackground" Color="{StaticResource SidebarColor}" />
    <SolidColorBrush x:Key="TabBorderBrush" Color="Black" />
</ResourceDictionary>
