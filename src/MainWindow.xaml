<Window x:Class="Watchdog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Watchdog.ViewModels"
        Title="Watchdog"
        Height="600"
        Width="1000"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <TabControl x:Name="ClusterTabs"
                    ItemsSource="{Binding ClustersPlus}"
                    SelectedIndex="{Binding SelectedClusterIndex, Mode=TwoWay}"
                    SelectionChanged="ClusterTabs_SelectionChanged"
                    Background="{StaticResource TabHeaderBrush}"
                    BorderBrush="{StaticResource BackgroundBrush}"
                    BorderThickness="0"
                    Padding="0">

            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
                    <Setter Property="Foreground" Value="{StaticResource TabForeground}" />
                    <Setter Property="BorderBrush" Value="{StaticResource TabHeaderBrush}" />
                    <Setter Property="BorderThickness" Value="0" />
                </Style>
                <Style TargetType="TabControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <DockPanel>
                                        <TabPanel x:Name="HeaderPanel"
                                                  Background="{StaticResource BackgroundBrush}"
                                                  IsItemsHost="True"
                                                  Margin="10,10,10,0"
                                                  DockPanel.Dock="Top"/>
                                        <Border CornerRadius="0,6,6,6"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Background="{TemplateBinding Background}"
                                                Margin="10,0,10,10">
                                            <ContentPresenter x:Name="ContentPanel"
                                                              ContentSource="SelectedContent"
                                                              Margin="0"/>
                                        </Border>
                                    </DockPanel>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="{StaticResource TabHeaderBrush}" />
                    <Setter Property="BorderBrush" Value="{StaticResource TabBorderBrush}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </TabControl.Resources>

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextBrush}" Background="{StaticResource TabHeaderBrush}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Border Margin="10">
                        <DockPanel Background="{StaticResource SidebarBrush}" LastChildFill="True">

                            <!-- Control Row -->
                            <StackPanel Orientation="Horizontal"
                                        DockPanel.Dock="Top"
                                        Background="{StaticResource SidebarBrush}"
                                        Height="40"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="0">
                                <Button Content="Add Node"
                                        Click="AddNode_Click"
                                        Margin="0"
                                        Padding="8,4"
                                        Background="#55CC55"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand" />
                            </StackPanel>

                            <!-- Main Content Area -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="240" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Sidebar -->
                                <Border Grid.Column="0"
                                        Background="{StaticResource SidebarBrush}"
                                        BorderBrush="Black"
                                        BorderThickness="0"
                                        Margin="0">
                                    <StackPanel Margin="0">
                                        <TextBlock Text="Nodes"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Foreground="{StaticResource TextBrush}"
                                                   Margin="0"/>
                                        <ItemsControl ItemsSource="{Binding Nodes}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Hostname}" Foreground="{StaticResource TextBrush}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- Node Grid -->
                                <ScrollViewer Grid.Column="1"
                                              Background="{StaticResource BackgroundBrush}"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled"
                                              Padding="0">
                                    <ItemsControl ItemsSource="{Binding Nodes}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="4" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource SidebarBrush}"
                                                        BorderBrush="Gray"
                                                        BorderThickness="0"
                                                        Margin="5"
                                                        Width="150"
                                                        Height="100">
                                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        <TextBlock Text="{Binding Hostname}"
                                                                   FontWeight="Bold"
                                                                   Foreground="{StaticResource TextBrush}"
                                                                   HorizontalAlignment="Center" />
                                                        <TextBlock Text="{Binding Status}"
                                                                   FontSize="12"
                                                                   Foreground="{StaticResource TextBrush}"
                                                                   HorizontalAlignment="Center" />
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
